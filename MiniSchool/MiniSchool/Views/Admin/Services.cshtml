
@{
    ViewBag.Title = "Services";
}

<h2>Services</h2>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #f7f9fc;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-title {
            text-align: center;
            color: #333;
            font-weight: bold;
            margin-top: 1rem;
        }

        .card-body {
            text-align: center;
        }

        .btn-custom {
            margin-top: 1rem;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
        }

        .row-custom {
            display: flex;
            justify-content: center;
            margin-top: 3rem;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row row-custom">
            <!-- Card for Classes -->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Classes</h5>
                        <p class="card-text">Manage your available classes and schedules. View or create new classes.</p>
                        <a href="@Url.Action("Index", "Classes")" class="btn btn-primary btn-custom">View Classes</a>
                    </div>
                </div>
            </div>

            <!-- Card for Subjects -->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Subjects</h5>
                        <p class="card-text">View, add, or modify the subjects offered in the system.</p><br />
                        <a href="@Url.Action("Index", "Subjects")" class="btn btn-success btn-custom">View Subjects</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
