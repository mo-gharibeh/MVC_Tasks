@{
    ViewBag.Title = "Admin Login";
    Layout = null; // Standalone page layout
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <style>
        body {
            height: 100vh;
            background: url('https://source.unsplash.com/1600x900/?technology') no-repeat center center;
            background-size: cover;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background-color: rgba(255, 255, 255, 0.85);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

            .login-container h2 {
                text-align: center;
                margin-bottom: 1.5rem;
                color: #333;
            }

        .form-control {
            border-radius: 8px;
            height: 50px;
            padding: 10px 15px;
        }

        .btn-primary {
            border-radius: 8px;
            padding: 12px;
            width: 100%;
            font-weight: bold;
            font-size: 1.1rem;
        }

        .login-container small {
            text-align: center;
            display: block;
            margin-top: 1rem;
        }

        .text-danger {
            text-align: center;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <h2>Admin Login</h2>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <div class="mb-3">
                @Html.Label("Email", new { @class = "form-label" })
                @Html.TextBox("Email", null, new { @class = "form-control", @placeholder = "Enter your email" })
            </div>

            <div class="mb-3">
                @Html.Label("Password", new { @class = "form-label" })
                @Html.Password("Password", null, new { @class = "form-control", @placeholder = "Enter your password" })
            </div>

            <button type="submit" class="btn btn-primary">Login</button>

            if (!string.IsNullOrEmpty(ViewData.ModelState[""]?.Errors.FirstOrDefault()?.ErrorMessage))
            {
                <div class="text-danger mt-3">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            }

            <small class="text-muted">Forgot your password? <a href="#">Reset it here</a></small>
        }
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
