@model MiniSchool.Models.Classe

@{
    ViewBag.Title = "Class Details";
}

<h2>Class Details</h2>

<!-- Optional: Display class details or other related information here -->
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Class Information</h5>
        <p class="card-text">Class Name: @Model.Name</p>
        <p class="card-text">Class ID: @Model.ClassId</p>
        <!-- Add other class-related information here -->
    </div>
</div>
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Students</h5>
                <p class="card-text">View and manage the list of students for this class.</p>
                <a href="@Url.Action("Index", "Students", new { classId = Model.ClassId })" class="btn btn-primary">View Students</a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Tasks</h5>
                <p class="card-text">View and manage tasks assigned to this class.</p>
                <a href="@Url.Action("Index", "Tasks", new { classId = Model.ClassId })" class="btn btn-success">View Tasks</a>
            </div>
        </div>
    </div>
</div>


<!-- Bootstrap 5 CSS and JS (if not included already) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
