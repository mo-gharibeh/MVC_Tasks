@model IEnumerable<MiniSchool.Models.Task>

@{
    ViewBag.Title = "Tasks in Class: " + (Model.FirstOrDefault()?.Class.Name ?? "Unknown Class");
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New Task", "Create", new { classId = Model.FirstOrDefault()?.ClassId }, new { @class = "btn btn-primary mb-3" })
</p>

<div class="row">
    @foreach (var task in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => task.Title)</h5>
                    <p class="card-text"><strong>Class:</strong> @Html.DisplayFor(modelItem => task.Class.Name)</p>
                    <p class="card-text"><strong>Created:</strong> @Html.DisplayFor(modelItem => task.Created)</p>

                    <!-- Task actions: Edit, Details, and Delete -->
                    <a href="@Url.Action("Edit", "Tasks", new { id = task.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Details", "Tasks", new { id = task.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Delete", "Tasks", new { id = task.Id })" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Bootstrap 5 CSS and JS (if not already included) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
