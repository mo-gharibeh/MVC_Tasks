@model IEnumerable<MiniSchool.Models.Subject>

@{
    ViewBag.Title = "Subjects";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New Subject", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>

<div class="row">
    @foreach (var subject in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => subject.Name)</h5>

                    <!-- Subject actions: Edit, Details, and Delete -->
                    <a href="@Url.Action("Edit", "Subjects", new { id = subject.SubjectId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Details", "Subjects", new { id = subject.SubjectId })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Delete", "Subjects", new { id = subject.SubjectId })" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Bootstrap 5 CSS and JS (if not already included) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
